<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleSize"
        android:elevation="4dp"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gen_key"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_gen_rsa_keys"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_rsa_key"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_get_rsa_pub_key"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rsa_pub_enc_pvt_dec"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_rsa_pub_enc_pvt_dec"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rsa_pvt_enc_pub_dec"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_rsa_pvt_enc_pub_dec"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rsa_signing"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_rsa_signing"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rsa_verify_signature"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_rsa_verify_sign"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_cipher_key_with_rsa"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="@string/security_rsa_save_key"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_rsa_key"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="Save RSA Key"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/set_cert_data"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="保存证书"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_cert_data"
                android:layout_width="0dp"
                android:layout_height="@dimen/titleSize"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:text="获取证书"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/colorOrange"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/colorTextContent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
